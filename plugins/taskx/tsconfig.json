{
  "compilerOptions": {
    /* === Output === */
    "outDir": "dist",
    "rootDir": "src",
    "target": "es2022", // modern JS, same as Obsidianâ€™s Electron runtime
    "module": "esnext", // for rollup/esbuild/Vite bundling
    "moduleResolution": "bundler",
    "lib": ["es2022", "dom"],
    "sourceMap": true,
    "skipLibCheck": true,

    /* === Strictness === */
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitThis": true,
    "useUnknownInCatchVariables": true,
    "forceConsistentCasingInFileNames": true,

    /* === Imports & Types === */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "types": ["node"],

    /* === Paths === */
    "baseUrl": ".",
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "paths": {
      "@/*": ["src/*"]
    },

    /* === Declarations (optional for library builds) === */
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "declarationDir": "dist-types"
  },

  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "dist", "dist-types"]
}
