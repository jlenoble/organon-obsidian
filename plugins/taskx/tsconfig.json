{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022", "DOM"],
    "strict": true,
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true,
    "emitDeclarationOnly": false,
    "declarationDir": "dist-types",
    "declarationMap": true,
    "types": ["node"]
  },
  "include": ["src/**/*.ts", "types.d.ts"]
}
